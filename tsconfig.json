{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "lib": ["es2020"],
    "types": ["node"],

    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,

    "moduleResolution": "node",

    "forceConsistentCasingInFileNames": true,
    "noEmitOnError": true,
    "removeComments": true,
    "allowSyntheticDefaultImports": true,

    "outDir": "build"
  }
}
